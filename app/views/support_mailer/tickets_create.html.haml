%html
  %head
    %meta{charset: 'utf-8'}

  %body
    %h1= "Dear #{@ticket.customer_name}! Your ticket is created."
    %p= "Ticket number #{@ticket.ticket_name}"
      = "You can check its status at the following link: #{link_to(root_url, { controller: 'dashboard', action: 'show', id: @ticket.ticket_name })} %>"

    %p = 'Thank you for contacting our support team! As soon as possible we will try to solve your problem.'