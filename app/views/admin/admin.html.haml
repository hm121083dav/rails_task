%html{ html_attrs('ru') }
  %head
    %title HelpDesk
    %meta(http-equiv="Content-Type" content="text/html; charset=utf-8")
    = stylesheet_link_tag 'standard'
  %body
    #conteiner
      #header
        %h1 #{@Tile}
        %hr
      #content
        - @allRequests.each_with_index do |item, index|
          .request
            %ul
              %li #{index+1} #{link_to item.subject,  request.url() + '/'+item.id.to_s}
      #footer
        %p.copyright
        Все права защищены ©
        %strong SoftBistro+

